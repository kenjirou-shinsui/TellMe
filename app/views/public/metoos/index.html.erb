
<h3 class="metoo-text1-index">Metooした回答一覧</h3>

<table class="table-borderless metoo-table-index">
	<% @metoos.each do |metoo| %>
	<tr>
		<td class="metoo-td-index">Q,<%= metoo.answer.question.title %></td>
		<td class="metoo-td-index">回答者:<%= metoo.answer.user.first_name %> <%= metoo.answer.user.last_name %></td>
		<td class="metoo-td-index">A,<%= metoo.answer.body %></td>
		<td class="metoo-td-index"><%= link_to "Metoo:計#{ metoo.answer.metoos.count }人" ,public_question_answer_metoo_path(metoo.answer.question.id,metoo.answer.id,metoo.id) %></td>
	</tr>
	<% end %>
</table>
<div class="paginate">
	<%= paginate @metoos, class: "paginate" %>
</div>

