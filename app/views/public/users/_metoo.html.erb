<% if Metoo.find_by(user_id: current_user.id, answer_id: answer.id) %>
<%= link_to public_question_answer_metoo_path(answer.question.id,answer.id), method: :delete, remote: true do %>
<i class="far fa-handshake" aria-hidden="true" style="color: red;"></i>
<% end %>
<% else %>
<%= link_to public_question_answer_metoos_path(answer.question.id,answer.id), method: :post, remote: true do %>
<i class="far fa-handshake" aria-hidden="true"></i>
<% end %>
<% end %>