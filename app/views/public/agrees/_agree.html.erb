<% if Agree.find_by(user_id: current_user.id, hope_question_id: hope_question.id) %>
  <%= link_to "/public/hope_questions/#{hope_question.id}/agrees", method: :delete, remote: true do %>
    <i class="far fa-thumbs-up" aria-hidden="true" style="color: red;"></i>
  <% end %>
<% else %>
  <%= link_to "/public/hope_questions/#{hope_question.id}/agrees", method: :post, remote: true do %>
    <i class="far fa-thumbs-up" aria-hidden="true"></i>
    <% end %>
<% end %>
