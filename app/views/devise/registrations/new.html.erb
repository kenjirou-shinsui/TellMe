
<div class="d-form">

  <h2>会員登録！</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table class="table-bordered d-table">
    <tr>
      　<div class="field">
        <td class="d-td"><%= f.label :かな氏名 %></td>
        <td class="d-td"><%= f.text_field :kana_first_name, autofocus: true  %>
          <%= f.text_field :kana_last_name, autofocus: true %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td class="d-td"><%= f.label :氏名 %></td>
          <td class="d-td"><%= f.text_field :first_name, autofocus: true %>
            <%= f.text_field :last_name, autofocus: true %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td class="d-td"><%= f.label :メールアドレス %><br /></td>
            <td class="d-td"><%= f.email_field :email,:size=>"42", autofocus: true, autocomplete: "email" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td class="d-td"><%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em></td>
              <% end %><br />
              <td class="d-td"><%= f.password_field :password,:size=>"42", autocomplete: "new-password" %></td>
            </div>
          </tr>
          <tr>
            <div class="field">
              <td class="d-td"><%= f.label :パスワード確認 %><br /></td>
              <td class="d-td"><%= f.password_field :password_confirmation, :size=>"42",autocomplete: "new-password" %></td>
            </div>
          </tr>
        </table>
        <div class="actions d-text4">
          <%= f.submit "会員登録" %>
        </div>
        <% end %>
      </div>
